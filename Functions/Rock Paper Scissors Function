# Rock, Paper, Scissors as a function

def rps(player1, player2):
  """
  input: Players chooese either rock, paper or scissors
  output: Player 1 wins, player 2 wins or it's a tie
  """
  if player1 == player2:
    print("It's a tie!")
  elif player1 == "rock":
    if player2 == "paper":
      print("Player 2 wins!")
    elif player2 == "scissors":
      print("Player 1 wins!")
  elif player1 == "paper":
    if player2 == "rock":
      print("Player 1 wins!")
    elif player2 == "scissors":
      print("Player 2 wins!")
  elif player1 == "scissors":
    if player2 == "rock":
      print("Player 2 wins!")
    elif player2 == "paper":
      print("Player 1 wins!")
